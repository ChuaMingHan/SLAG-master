<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ABU_ProperWasteDisposal">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Proper Disposal of E-Waste"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Large" />

    <TextView
        android:id="@+id/subTitle1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Proper Disposal: Importance"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/content1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/importance" />

    <TextView
        android:id="@+id/content2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:textAlignment="center"
        android:text="@string/importance2" />

    <TextView
        android:id="@+id/subTitle2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Proper Disposal: How To"
        android:layout_marginTop="25dp"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Large" />
    android:textStyle="bold"/>

    <TextView
        android:id="@+id/ABUOMtv5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/howto" />


</LinearLayout>